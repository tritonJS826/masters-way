# Stage 1: build
FROM golang:1.23-alpine AS build
WORKDIR /app
RUN apk add --no-cache make
COPY go-common ./go-common
COPY mw-server/apiAutogenerated src/apiAutogenerated/
COPY mw-server/go.mod mw-server/go.sum src/
RUN cd src && go mod download
COPY mw-server src/
RUN cd src && make build

# Stage 2: production
# we need alpine because without it google auth does not work,
# we cant migrate to scratch as base container after adding auth microservice
FROM alpine:3.18
WORKDIR /app
COPY --from=build /app/src/main ./
COPY --from=build /app/src/entrypoint.sh ./
COPY --from=build /app/src/.env ./
# required for reset-db
COPY --from=build /app/src/internal/db/migration ./internal/db/migration
EXPOSE 8000
RUN chmod +x ./entrypoint.sh
ENTRYPOINT ["./entrypoint.sh"]
