# Stage 1: build
FROM golang:1.23-alpine AS build
WORKDIR /app
RUN apk add --no-cache make
COPY go-common ./go-common
COPY mw-notification-bff/apiAutogenerated src/apiAutogenerated/
COPY mw-notification-bff/go.mod mw-notification-bff/go.sum src
RUN cd src && go mod download
COPY mw-notification-bff src/
RUN cd src && make build

# Stage 2: production
FROM alpine:3.18
WORKDIR /app
COPY --from=build /app/src/main ./
COPY --from=build /app/src/entrypoint.sh ./
COPY --from=build /app/src/.env ./
EXPOSE 7995
RUN chmod +x ./entrypoint.sh
ENTRYPOINT ["./entrypoint.sh"]
