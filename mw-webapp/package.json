{
  "name": "mw-webapp",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.tsx",
  "type": "module",
  "scripts": {
    "start": "vite --host",
    "build": "vite build && echo \"Copying _redirects for netlify\" && cp ./deploy/_redirects ./build/_redirects",
    "api:generate": "openapi-generator-cli generate -g typescript-fetch -i http://localhost:8000/docs/doc.json -o ./src/apiAutogenerated -t ./openApiTemplates",
    "serve": "vite preview",
    "lint-check": "eslint .",
    "lint-fix": "eslint . --fix",
    "stylelint-check": "stylelint **/*.scss",
    "stylelint-fix": "stylelint **/*.scss --fix",
    "format": "prettier --write",
    "type-check": "tsc",
    "test": "echo \"Script doesn't work\"",
    "prepare": "cd .. && husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "cypress:component:open": "cypress open --component",
    "cypress:component:run": "cypress run --component --spec ./src/component/all.cy.tsx",
    "cypress:e2e:open": "cypress open",
    "cypress:e2e:run": "cypress run"
  },
  "engines": {
    "node": "20.11.0",
    "pnpm": "8.15.2"
  },
  "packageManager": "pnpm@8.15.2",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "pnpm run lint-fix"
    ],
    "**/*.{scss,module.scss}": [
      "pnpm run format --",
      "pnpm run stylelint-fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "extends": "../tsconfig.json",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
