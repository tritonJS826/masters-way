# Stage 1: build
FROM golang:1.23-alpine AS build
WORKDIR /app
RUN apk add --no-cache make
COPY go-common ./go-common
# COPY mw-training/apiAutogenerated src/apiAutogenerated/
COPY mw-training/go.mod mw-training/go.sum src/
RUN cd src && go mod download
COPY mw-training src/
RUN cd src && make build

# Stage 2: production
FROM alpine:3.18
WORKDIR /app
COPY --from=build /app/src/main ./
COPY --from=build /app/src/entrypoint.sh ./
COPY --from=build /app/src/.env ./
# required for reset-db
COPY --from=build /app/src/internal/db/migration ./internal/db/migration
EXPOSE 8008
RUN chmod +x ./entrypoint.sh
ENTRYPOINT ["./entrypoint.sh"]
