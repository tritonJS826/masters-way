# Stage 1: build
FROM golang:1.23-alpine AS build
WORKDIR /app
RUN apk add --no-cache make
COPY go-common ./go-common
# COPY mw-notification-websocket/apiAutogenerated src/apiAutogenerated/
COPY mw-notification-websocket/go.mod mw-notification-websocket/go.sum src/
RUN cd src && go mod download
COPY mw-notification-websocket src/
RUN cd src && make build

# Stage 2: production
FROM scratch
WORKDIR /app
COPY --from=build /app/src/main ./
COPY --from=build /app/src/.env ./
EXPOSE 7996
ENTRYPOINT ["./main"]