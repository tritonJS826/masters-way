
# Stage 1: build
FROM golang:1.23-alpine AS build
WORKDIR /app
RUN apk add --no-cache make
COPY go-common ./go-common
COPY mw-test-websocket/apiAutogenerated src/apiAutogenerated/
COPY mw-test-websocket/go.mod mw-test-websocket/go.sum src/
RUN cd src && go mod download
COPY mw-test-websocket src/
RUN cd src && make build

# Stage 2: production
FROM scratch
WORKDIR /app
COPY --from=build /app/src/main ./
COPY --from=build /app/src/.env ./
EXPOSE 7991
ENTRYPOINT ["./main"]

