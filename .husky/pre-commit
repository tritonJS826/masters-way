#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

WEBAPP="mw-webapp/"
SERVER="mw-server/"
MOBILE="mw-mobile/"
CHAT="mw-chat/"
CHAT_BFF="mw-chat-bff/"

runWebappIfChanged () {
  if git diff --name-only --cached | grep "$WEBAPP"
  then
    echo "webapp changed. checking..."

    pnpm --filter mw-webapp lint-staged

    pnpm concurrently \
        "pnpm --filter mw-webapp type-check" \
        "pnpm --filter mw-webapp test" \
        "pnpm --filter mw-webapp build-storybook" \
        "pnpm --filter mw-webapp build" \
        "pnpm --filter mw-webapp cypress:component:run"
  fi
}

runServerIfChanged () {
  if git diff --name-only --cached | grep "$SERVER"
  then
    echo "mw-server changed. checking..."
    pnpm server:build
    # pnpm server:test
  fi
}

runChatIfChanged () {
  if git diff --name-only --cached | grep "$CHAT"
  then
    echo "mw-chat changed. checking..."
    pnpm server:build
    # pnpm server:test
  fi
}

runChatBffIfChanged () {
  if git diff --name-only --cached | grep "$CHAT_BFF"
  then
    echo "mw-chat-bff changed. checking..."
    pnpm server:build
    # pnpm server:test
  fi
}

runMobileIfChanged () {
  if git diff --name-only --cached | grep "$MOBILE"
  then
    echo "mw-mobile changed. checking..."
    pnpm mobile:build
    pnpm mobile:test
  fi
}


runE2E () {
  pnpm web:cypress:e2e:run
}

runWebappIfChanged
runServerIfChanged
runChatIfChanged
runChatBffIfChanged
runMobileIfChanged
runE2E
